# Example terraform.tfvars file
# Copy this to terraform.tfvars and update with your values

# Proxmox Configuration
proxmox_api_url = "https://192.168.1.10:8006/api2/json"
proxmox_username = ""  # Leave empty if using API token
proxmox_password = ""  # Leave empty if using API token  
proxmox_api_token_id = "terraform-prov@pve!terraform-token"
proxmox_api_token_secret = ""  # Will be set by deploy script
proxmox_insecure = true
proxmox_node = "gateway"
vm_datastore = "local-lvm"

# Network Configuration  
network_gateway = "192.168.1.254"
nameserver = "192.168.1.254"
network_cidr = "192.168.1.0/24"

# Cluster Configuration
cluster_name = "homelab"
cluster_endpoint = "192.168.1.11"
talos_version = "v1.8.1" 
kubernetes_version = "v1.31.1"

# Control Plane Nodes (Masters: .11, .12, .13, .14, .15)
control_plane_nodes = {
  "talos-cp-01" = {
    ip_address   = "192.168.1.11"
    mac_address  = "BC:24:11:2E:C8:01" 
    vm_id        = 810
    cpu_cores    = 4
    memory_mb    = 8192
    disk_size_gb = 100
  }
}

# Worker Nodes (Workers: .1, .2, .3, .4, .5, .6, .7, .8, .9)
worker_nodes = {
  "talos-worker-01" = {
    ip_address   = "192.168.1.1"
    mac_address  = "BC:24:11:2E:C8:00"
    vm_id        = 800
    cpu_cores    = 6 
    memory_mb    = 16384
    disk_size_gb = 200
  }
}

# Domain Configuration
domain_name = "andisoft.co.uk"
internal_domain = "home.andisoft.co.uk"
