# Example Terraform variables for Talos Proxmox deployment
# Copy this file to terraform.tfvars and fill in your values

proxmox = {
  name         = "pve"
  cluster_name = "homelab"
  endpoint     = "https://192.168.1.10:8006"
  insecure     = true
  username     = "root"
  api_token    = "root@pam!terraform=your-api-token-here"
}

# Azure Key Vault Configuration (optional)
azure = {
  tenant_id = "your-azure-tenant-id"
  object_id = "your-azure-object-id"  # Get with: az ad signed-in-user show --query id -o tsv
  location  = "East US"
}

# Enable/disable Azure Key Vault integration
enable_keyvault = true

# Secrets to store in Azure Key Vault (optional)
keyvault_secrets = {
  # Example secrets:
  # "proxmox-api-token" = "your-proxmox-api-token"
  # "flux-github-token" = "your-github-personal-access-token"
  # "cluster-ca-cert"   = "your-cluster-ca-certificate"
}
