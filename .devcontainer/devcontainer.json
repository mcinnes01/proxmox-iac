{
  "name": "Talos Proxmox Homelab",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/devcontainers-extra/features/terramate:1": {},
    "ghcr.io/devcontainers-extra/features/talosctl:1": {},
    "ghcr.io/goldsam/dev-container-features/flux2:1": {},
    "ghcr.io/audacioustux/devcontainers/cilium:1": {}
  },
  
  "postCreateCommand": "curl -fsSL https://releases.hashicorp.com/terraform/1.12.2/terraform_1.12.2_linux_amd64.zip -o terraform.zip && unzip terraform.zip && sudo mv terraform /usr/local/bin/ && rm terraform.zip && terraform version",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "HashiCorp.terraform",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml"
      ]
    }
  },
  
  "remoteUser": "vscode"
}
